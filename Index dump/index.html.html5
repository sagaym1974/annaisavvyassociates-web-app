        welcomeEl.style.marginLeft = '10px';
        welcomeEl.textContent = 'Welcome, ' + user.email;
        logoutBtn.parentNode.insertBefore(welcomeEl, logoutBtn.nextSibling);
      } else {
        document.getElementById('welcome-msg').textContent = 'Welcome, ' + user.email;
      }
    } else {
      loginLink.style.display = 'inline-block';
      logoutBtn.style.display = 'none';

      // Remove welcome message when logged out
      const welcomeEl = document.getElementById('welcome-msg');
      if (welcomeEl) welcomeEl.remove();
    }
  });

  // Logout button click handler
  logoutBtn.addEventListener('click', () => {
    firebase.auth().signOut()
      .then(() => {
        alert('You have logged out successfully!');
        window.location.href = 'index.html'; // redirect or reload your page after logout
      })
      .catch(error => {
        alert('Logout error: ' + error.message);
      });
  });
</script>



















