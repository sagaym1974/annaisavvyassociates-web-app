<script>

function closeForm() {
  const modalForm = document.getElementById('modalForm');
  if (modalForm) modalForm.style.display = 'none';

  const estateForm = document.getElementById('estateForm');
  if (estateForm) estateForm.reset();

  const jobForm = document.getElementById('jobForm');
  if (jobForm) jobForm.reset();

  const sendBtn = document.getElementById('sendBtn');
  if (sendBtn) sendBtn.disabled = true;

  const submitBtn = document.getElementById('submitBtn');
  if (submitBtn) submitBtn.disabled = true;
}

function toggleSendBtn(enable) {
    document.getElementById('sendBtn').disabled = !enable;
    if (!enable) setTimeout(closeForm, 700);
}
document.getElementById('estateForm').onsubmit = async function(e) {
    e.preventDefault();
    const form = e.target;
    const type = form.getAttribute('data-type');
    const dateStr = new Date().toLocaleDateString('en-GB').replace(/\//g,'-');
    const subject = `Real Estate Enquiry "${type.charAt(0).toUpperCase()+type.slice(1)}" - ${dateStr}`;
    let body = '';
